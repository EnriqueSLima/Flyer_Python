#:kivy 1.0.9
#:import MapView kivy.garden.mapview.MapView

<FlyerManager>:
    SignIn:
        name: 'sign_in_screen'
    SignUp:
        name: 'sign_up_screen'
    Validation:
        name: 'validation_screen'
    FlyerIndex:
        name: 'index_screen'

#  SCREENS FOR LOG_IN

#   Estilizar Inputs e Botões da área de Login.
#   Criar funções para trocar telas

<SignIn>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 70
        padding: 50
        canvas: 
            Color:
                rgba: .1,.1,.1,1
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            Image:
                source: 'images/logo/flyer_logo.png'
                size_hint_y: None
                height: 200
            Label:
                text: 'E-MAIL'
                font_size: 12
            TextInput:
                multiline: False
                size_hint_y: None
                height: 30
            Label:
                text: 'PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
        Button:
            text: 'SIGN IN'
            size_hint_y: None
            height: 50
            background_color: [0, 0, 10, 1]
            on_release: app.root.current = 'index_screen'
        Button:
            text: 'SIGN UP'
            size_hint_y: None
            height: 50
            background_color: [0, 0, 10, 1]
            on_release: app.root.current = 'sign_up_screen'


<SignUp>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 100
        padding: 50
        canvas: 
            Color:
                rgba: .1,.1,.1,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            Image:
                source: 'images/logo/flyer_logo.png'
                size_hint_y: None
                height: 200
            Label:
                text: 'E-MAIL'
                font_size: 12
            TextInput:
                multiline: False
                size_hint_y: None
                height: 30
            Label:
                text: 'PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
            Label:
                text: 'CONFIRM PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
        Button:
            text: 'REGISTER'
            size_hint_y: None
            height: 50
            background_color: [0, 0, 10, 1]
            on_release: app.root.current = 'validation_screen'


<Validation>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 150
        padding: 50
        canvas: 
            Color:
                rgba: .1,.1,.1,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            Image:
                source: 'images/logo/flyer_logo.png'
                size_hint_y: None
                height: 200
            Label:
                text: 'INSERT CODE'
                font_size: 12
            TextInput:
                multiline: False
                size_hint_y: None
                height: 30
        Button:
            text: 'VALIDATE'
            size_hint_y: None
            height: 50
            background_color: [0, 0, 10, 1]
            on_release: app.root.current = 'sign_in_screen'
#   INDEX SCREEN - MAIN USE

#   Implementar Botoes de acção

<FlyerIndex>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            background_color: [0, 0, 171]
            ActionView:
                ActionPrevious:
                    spacing: 30
                    title: 'Flyer'
                    with_previous: False
                    app_icon: 'images/logo/flyer_logo.png'
                    app_icon_width: 40
                    app_icon_height: 40
                    ActionButton:
                        icon: 'images/icons/round_map_white_36.png'
                    ActionButton:
                        icon: 'images/icons/round_list_white_36.png'
                    ActionButton:
                        icon: 'images/icons/round_search_white_36.png'
        MapView:
            id: 'mapflyer'
            lat:  -23.550277777778 
            lon:  -46.633888888889 
            zoom: 16
            double_tap_down: True
            MapMarkerPopup:
                source: 'images/icons/marker_icon.png'
                lat:  -23.550277777778
                lon:  -46.633888888889
        ActionBar:
            background_color: [0, 0, 171]
            ActionView:
                ActionPrevious:
                    spacing: 40
                    title:''
                    with_previous: False
                    app_icon: 'images/icons/round_home_white_36.png'
                    #ActionButton:
                    #    icon: 'images/icons/round_home_white_36.png'
                    ActionButton:
                        icon: 'images/icons/round_sell_white_36.png'
                    ActionButton:
                        icon: 'images/icons/round_favorite_white_36.png'
                    ActionButton:
                        icon: 'images/icons/round_settings_white_36.png'
