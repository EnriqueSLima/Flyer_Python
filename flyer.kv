#:kivy 1.0.9

<FlyerManager>:
    SignIn:
        name: 'sign_in'
    SignUp:
        name: 'sign_up'

<SignIn>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 50
        Image:
            source: 'images/flyer_icon.png'
            size_hint_y: None
            height: 150
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'E-MAIL'
                font_size: 12
            TextInput:
                multiline: False
                size_hint_y: None
                height: 30
            Label:
                text: 'PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
        Button:
            text: 'SIGN IN'
            size_hint_y: None
            height: 40
            on_release: app.root.current = 'sign_in'
        Button:
            text: 'SIGN UP'
            size_hint_y: None
            height: 40
            on_release: app.root.current = 'sign_up'

<SignUp>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 50
        Image:
            source: 'images/flyer_icon.png'
            size_hint_y: None
            height: 150
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'E-MAIL'
                font_size: 12
            TextInput:
                multiline: False
                size_hint_y: None
                height: 30
            Label:
                text: 'PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
            Label:
                text: 'CONFIRM PASSWORD'
                font_size: 12
            TextInput:
                multiline: False
                password: True
                size_hint_y: None
                height: 30
        Button:
            text: 'SIGN UP'
            size_hint_y: None
            height: 40
            on_release: app.root.current = 'sign_in'